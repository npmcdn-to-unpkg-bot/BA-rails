<header>
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="logo">
          <a href="/home"><img src="../logo.png" alt="" /></a>
          <% if logged_in? %>
          <%= link_to "Log Out", '/logout', class: "login-btn" %>
          <%= link_to "Create New Post", '/posts/new', class: "login-btn" %>
          <% else %>
          <%= link_to "Sign up now!", register_path, class: "login-btn" %>
          <%= link_to "Login In", '/login', class: "login-btn" %>
          <% end %>
        </div>
        <div class="row">
          <div class="col-md-12">


              <%= link_to "HOME", '/home', class: "navbar" %>
              <%= link_to "ABOUT US", '', class: "navbar" %>
              <%= link_to "POSTS", '/posts', class: "navbar" %>
              <%= link_to "BLOGGERS", '/users', class: "navbar" %>
              <%= link_to "CONTACT US", '', class: "navbar" %>
            </div>
          </div>
      </div>
    </div>
  </div>

</header>
