<%= render 'shared/page_title', title: @post.title %>

<div class="row">
  <div class="col-md-4 pull-right center">
    <p>
      <h5>Brought to you by: <%= @post.user.username %></h5>
    </p>
  </div>
  <div class="col-md-8">

      <%= link_to "Edit", edit_post_path(@post), class: "btn btn-success pull-right" %>


      <%= link_to "[Delete Recipe]", @post, method: :delete, data: { confirm: "Are you sure?" } %>

    <h3><%= @post.title %></h3>
    <div class="show_recipe">
      <%= image_tag(@post.picture.url, class: "gravatar") if @post.picture? %>
    </div>
  </div>
</div>

<h5><%= link_to 'Return to Recipe Lisiting',posts_path, class: "btn btn-warning btn-small" %></h5>
