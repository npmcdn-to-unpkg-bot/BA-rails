<% render 'shared/page_title', title: "User: " + @user.username %>


<%= image_tag(@user.picture.url, class: "img-circle", size: "50x50") %>
<% if logged_in? %>
<%= link_to "Edit your Profile", edit_user_path, class: "btn btn-warning" %>
<% end %>
<br>
<br>


<% if logged_in? %>
<ul class="nav_ul_item">
<li class="dropdown">
  <%= link_to '#', class: "btn btn-default dropdown-toggle", 'data-toggle' => "dropdown" do %>
    Make your topic <b class="caret"></b>
    <% end %>
    <ul class="dropdown-menu">
      <% Topic.all.each do |topic| %>
        <li><%= link_to topic.name, topic_path(topic) %></li>
      <% end %>
      <% if logged_in? %>
      <li class="divider"></li>
      <li>
        <%= link_to(new_topic_path) do %>
        New Topic
      <% end %>
      </li>
      <% end %>
    </ul>
</li>
</ul>
<% end %>

<% @posts.each do |post| %>
<div class="col-md-4">
    <a href="/posts/<%= post.id%>">
        <span class="text"><%= post.title %></span>
        <%= image_tag(post.picture.url, width:"350", height:"350", class: "pictures-show") %>
        </a>
  </div>
<% end %>
